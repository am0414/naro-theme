{% comment %}
  naro - Footer Section
  シンプルなフッター
{% endcomment %}

<style>
  .naro-footer {
    background: #fafafa;
    padding: 60px 40px 30px;
    margin-top: 80px;
  }

  .naro-footer-content {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 60px;
  }

  @media (max-width: 768px) {
    .naro-footer-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }

  .naro-footer-brand {
    font-size: 20px;
    font-weight: 600;
    letter-spacing: 3px;
    color: #1a1a1a;
    margin-bottom: 15px;
  }

  .naro-footer-tagline {
    font-size: 13px;
    color: #888;
    line-height: 1.6;
  }

  .naro-footer-title {
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: #1a1a1a;
    margin-bottom: 20px;
  }

  .naro-footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .naro-footer-links li {
    margin-bottom: 12px;
  }

  .naro-footer-links a {
    font-size: 13px;
    color: #666;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .naro-footer-links a:hover {
    color: #1a1a1a;
  }

  .naro-footer-bottom {
    max-width: 1400px;
    margin: 40px auto 0;
    padding-top: 20px;
    border-top: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .naro-copyright {
    font-size: 12px;
    color: #888;
  }

  .naro-payment-icons {
    display: flex;
    gap: 10px;
  }

  .naro-payment-icon {
    width: 40px;
    height: 25px;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10px;
    color: #666;
  }
</style>

<footer class="naro-footer">
  <div class="naro-footer-content">
    <div>
      <p class="naro-footer-brand">NARO</p>
      <p class="naro-footer-tagline">Move With Confidence.<br>NAROが叶える、見えない安心。</p>
    </div>
    
    <div>
      <p class="naro-footer-title">ショップ</p>
      <ul class="naro-footer-links">
        <li><a href="/pages/about">ブランドについて</a></li>
        <li><a href="/pages/faq">よくある質問</a></li>
      </ul>
    </div>
    
    <div>
      <p class="naro-footer-title">サポート</p>
      <ul class="naro-footer-links">
        <li><a href="/pages/contact">お問い合わせ</a></li>
        <li><a href="/pages/shipping">配送について</a></li>
        <li><a href="/pages/returns">返品・交換</a></li>
        <li><a href="/pages/privacy-policy">プライバシーポリシー</a></li>
        <li><a href="/pages/tokushoho">特定商取引法に基づく表記</a></li>
      </ul>
    </div>
  </div>
  
  <div class="naro-footer-bottom">
    <p class="naro-copyright">© {{ 'now' | date: "%Y" }} NARO. All rights reserved.</p>
    <div class="naro-payment-icons">
      <span class="naro-payment-icon">VISA</span>
      <span class="naro-payment-icon">MC</span>
      <span class="naro-payment-icon">AMEX</span>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": []
}
{% endschema %}
