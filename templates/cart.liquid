{% section 'header' %}

<div style="max-width: 800px; margin: 0 auto; padding: 60px 20px;">
  <h1 style="font-size: 24px; margin-bottom: 30px;">カート</h1>
  
  {% if cart.item_count > 0 %}
    {% for item in cart.items %}
      <div style="display: flex; gap: 20px; padding: 20px 0; border-bottom: 1px solid #eee;">
        <img src="{{ item.image | image_url: width: 100 }}" alt="{{ item.title }}" style="width: 100px; height: 100px; object-fit: cover;">
        <div style="flex: 1;">
          <p style="font-weight: 500;">{{ item.product.title }}</p>
          <p style="color: #666; font-size: 14px;">{{ item.variant.title }}</p>
          <p style="margin-top: 10px;">¥{{ item.price | money_without_currency }}</p>
        </div>
        <div>
          <a href="/cart/change?id={{ item.key }}&quantity=0" style="color: #999; font-size: 14px;">削除</a>
        </div>
      </div>
    {% endfor %}
    
    <div style="margin-top: 30px; text-align: right;">
      <p style="font-size: 18px; margin-bottom: 20px;">合計: <strong>¥{{ cart.total_price | money_without_currency }}</strong></p>
      <a href="/checkout" style="display: inline-block; background: #1a1a1a; color: #fff; padding: 15px 40px; border-radius: 6px;">購入手続きへ</a>
    </div>
  {% else %}
    <p>カートは空です。</p>
    <a href="/products/flat-front-thong" style="display: inline-block; margin-top: 20px; color: #1a1a1a; text-decoration: underline;">商品を見る</a>
  {% endif %}
</div>

{% section 'footer' %}
