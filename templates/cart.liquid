<div style="max-width: 800px; margin: 0 auto; padding: 60px 20px;">
  <h1 style="font-size: 24px; margin-bottom: 30px;">カート</h1>
  
  {% if cart.item_count > 0 %}
    <div id="cart-items">
      {% for item in cart.items %}
        <div class="cart-item" data-key="{{ item.key }}" style="display: flex; gap: 16px; padding: 20px 0; border-bottom: 1px solid #eee; align-items: flex-start;">
          <img src="{{ item.image | image_url: width: 100 }}" alt="{{ item.title }}" style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px; flex-shrink: 0;">
          <div style="flex: 1; min-width: 0;">
            <p style="font-weight: 500; font-size: 14px;">{{ item.product.title }}</p>
            <p style="color: #666; font-size: 13px; margin-top: 4px;">{{ item.variant.title }}</p>
            <p style="margin-top: 8px; font-weight: 600;">¥{{ item.price | money_without_currency }}</p>
            
            <!-- 数量変更 -->
            <div style="display: flex; align-items: center; gap: 16px; margin-top: 12px;">
              <div style="display: flex; align-items: center; border: 1px solid #ddd; border-radius: 6px; overflow: hidden;">
                <button type="button" onclick="updateQuantity('{{ item.key }}', {{ item.quantity | minus: 1 }})" 
                   style="display: flex; align-items: center; justify-content: center; width: 44px; height: 44px; color: #333; font-size: 20px; background: #f5f5f5; border: none; cursor: pointer; -webkit-tap-highlight-color: transparent;">−</button>
                <span class="item-quantity" style="display: flex; align-items: center; justify-content: center; width: 44px; height: 44px; font-size: 16px; font-weight: 500;">{{ item.quantity }}</span>
                <button type="button" onclick="updateQuantity('{{ item.key }}', {{ item.quantity | plus: 1 }})" 
                   style="display: flex; align-items: center; justify-content: center; width: 44px; height: 44px; color: #333; font-size: 20px; background: #f5f5f5; border: none; cursor: pointer; -webkit-tap-highlight-color: transparent;">+</button>
              </div>
              <button type="button" onclick="updateQuantity('{{ item.key }}', 0)" 
                 style="color: #999; font-size: 13px; padding: 8px; background: none; border: none; cursor: pointer; -webkit-tap-highlight-color: transparent;">削除</button>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    
    <div style="margin-top: 30px;">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <span style="font-size: 16px;">合計</span>
        <span id="cart-total" style="font-size: 20px; font-weight: 600;">¥{{ cart.total_price | money_without_currency }}</span>
      </div>
      <a href="/checkout" style="display: block; background: #1a1a1a; color: #fff; padding: 18px 40px; border-radius: 6px; text-decoration: none; text-align: center; font-weight: 600; font-size: 15px;">購入手続きへ</a>
    </div>
  {% else %}
    <p>カートは空です。</p>
    <a href="/products/flat-front-thong" style="display: inline-block; margin-top: 20px; color: #1a1a1a; text-decoration: underline;">商品を見る</a>
  {% endif %}
</div>

<script>
function updateQuantity(key, quantity) {
  // ボタンを無効化（連打防止）
  const buttons = document.querySelectorAll('button');
  buttons.forEach(btn => btn.disabled = true);

  fetch('/cart/change.js', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({
      id: key,
      quantity: quantity
    })
  })
  .then(response => response.json())
  .then(data => {
    // ページをリロードして更新を反映
    window.location.reload();
  })
  .catch(error => {
    console.error('Error:', error);
    // エラー時もリロード
    window.location.reload();
  });
}
</script>
